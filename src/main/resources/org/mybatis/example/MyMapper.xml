<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mybatis.example.UserMapper">
    <select id="selectUserById" resultType="User" parameterType="String">
        select id,name,password,create_time,update_time from user where id = #{id}
    </select>

    <select id="selectUserByUserName" resultType="User" parameterType="String">
        select id,name,password,create_time,update_time from user where name = #{username}
    </select>

</mapper>